{
  "editor.fontLigatures": true,
  "editor.guides.bracketPairs": "active",
  "files.associations": {
    "*.css": "tailwindcss",
    "*.scss": "tailwindcss"
  },
  "stylelint.enable": true,
  "stylelint.validate": [
    "css",
    "less",
    "postcss",
    "scss",
    "tailwindcss"
  ],
  "module-templates.engine": "handlebars",
  "module-templates.templates": {
    "react-component": {
      "displayName": "React component",
      "defaultPath": "components",
      "folder": "{{pascal name}}",
      "questions": {
        "name": "Component name",
      },
      "files": [
        {
          "name": "{{pascal name}}.js",
          "content": [
            "import React from 'react';",
            "",
            "const {{pascal name}} = () => {",
            "",
            "  return (",
            "    <div>{{pascal name}}</div>",
            "  );",
            "};",
            "",
            "export default {{pascal name}};",
            "",
          ]
        },
        {
          "name": "index.js",
          "content": [
            "export { default } from './{{pascal name}}';",
            ""
          ]
        }
      ]
    },
    "react-component-with-module-scss": {
      "displayName": "React component with module scss",
      "defaultPath": "components",
      "folder": "{{pascal name}}",
      "questions": {
        "name": "Component name",
      },
      "files": [
        {
          "name": "{{pascal name}}.js",
          "content": [
            "import React from 'react';",
            "import styles from './{{pascal name}}.module.scss';",
            "",
            "const {{pascal name}} = () => {",
            "",
            "  return (",
            "    <div>{{pascal name}}</div>",
            "  );",
            "};",
            "",
            "export default {{pascal name}};",
            "",
          ]
        },
        {
          "name": "{{pascal name}}.module.scss",
          "content": [
            ".{{kebab name}} {",
            "",
            "}"
          ]
        },
        {
          "name": "index.js",
          "content": [
            "export { default } from './{{pascal name}}';",
            ""
          ]
        }
      ]
    },
  },
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll": "never"
  }
}
